<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samair.starcity.User.AddProducts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="Add Products"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_addproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:hint="Product Name"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Type:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerProductType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:autofillHints="Select Type" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Manufacturer:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerManufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:autofillHints="Select Type" />

            <EditText
                android:id="@+id/description_addproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine" />
            <Button
                android:id="@+id/btn_chooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="Choose Images" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/image_product1"
                    android:layout_marginStart="12dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/colorLightDark"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/image_product2"
                    android:layout_marginStart="2dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@+id/image_product1"
                    android:background="@color/colorLightDark"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/image_product3"
                    android:layout_marginStart="2dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@+id/image_product2"
                    android:background="@color/colorLightDark"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/image_product4"
                    android:layout_marginStart="2dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@+id/image_product3"
                    android:background="@color/colorLightDark"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/image_product5"
                    android:layout_marginStart="2dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@+id/image_product4"
                    android:background="@color/colorLightDark"
                    android:visibility="invisible"/>

            </RelativeLayout>



            <Button
                android:id="@+id/btn_saveProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="Save" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
