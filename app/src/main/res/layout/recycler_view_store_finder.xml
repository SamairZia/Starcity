<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:id="@+id/productCardViewStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:focusable="true"
        android:clickable="true"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"

        card:cardCornerRadius="4dp"
        card:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">


            <TextView
                android:id="@+id/tv_shopNameStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold|italic"
                android:textSize="20sp"

                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_labelShopRepNameStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rep Name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tv_shopNameStore"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_shopRepNameStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rep Name HERE"
                android:layout_below="@+id/tv_shopNameStore"
                android:layout_toEndOf="@+id/tv_labelShopRepNameStore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_labelShopNumberStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop No."
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tv_labelShopRepNameStore"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_shopNumberStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-123"
                android:layout_below="@+id/tv_labelShopRepNameStore"
                android:layout_toEndOf="@+id/tv_labelShopRepNameStore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_labelShopFloorStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toEndOf="@+id/tv_shopNumberStore"
                android:layout_below="@+id/tv_labelShopRepNameStore"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_shopFloorStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LB"
                android:layout_below="@+id/tv_labelShopRepNameStore"
                android:layout_toEndOf="@+id/tv_labelShopFloorStore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_labelShopContactStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tv_labelShopFloorStore"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_shopContactStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03123123123"
                android:layout_below="@+id/tv_labelShopFloorStore"
                android:layout_toEndOf="@+id/tv_labelShopContactStore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_labelShopFloorStore"
                android:layout_toEndOf="@+id/tv_shopContactStore"
                android:text="|"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/tv_shopEmailStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a@ask.com"
                android:layout_below="@+id/tv_labelShopFloorStore"
                android:layout_toEndOf="@+id/tv_shopContactStore"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_labelShopTypeStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tv_labelShopContactStore"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_shopTypeStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wholesale"
                android:layout_below="@+id/tv_labelShopContactStore"
                android:layout_toEndOf="@+id/tv_labelShopContactStore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>