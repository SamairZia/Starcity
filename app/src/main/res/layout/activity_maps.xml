<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context="com.example.samair.starcity.Dashboard.MapsActivity"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="300dp"
        android:layout_width="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mapDirection"
        android:text="@string/get_directions"
        android:textColor="@color/colorBlueLogo"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_mapDirection"
        android:src="@drawable/starcity_map"/>

</RelativeLayout>
